<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".8"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/titillium_web"
                            android:text="Select Menu"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/txtAddMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".4"
                            android:fontFamily="@font/titillium_web"
                            android:gravity="end"
                            android:paddingBottom="5dp"
                            android:text="Add menu"
                            android:textColor="@color/primaryColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spMenu"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:fontFamily="@font/titillium_web"
                        android:layout_weight="3"
                        android:background="@drawable/background_spinner"
                        android:gravity="center_vertical"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="10sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".8"
                            android:fontFamily="@font/titillium_web"
                            android:paddingBottom="5dp"
                            android:text="Select Recipe"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/txtAddRecipe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".4"
                            android:gravity="end"
                            android:fontFamily="@font/titillium_web"
                            android:paddingBottom="5dp"
                            android:text="Add Recipe"
                            android:textColor="@color/primaryColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spRecipe"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/titillium_web"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="3"
                        android:background="@drawable/background_spinner"
                        android:gravity="center_vertical"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtQty"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight=".5"
                        android:paddingStart="15dp"
                        android:background="@drawable/background_text"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/titillium_web"
                        android:hint="Enter Quantity"
                        android:inputType="numberDecimal"
                        android:padding="2dp"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Name"
                        android:textSize="14dp"
                        android:fontFamily="@font/titillium_web"
                        android:textColor="@color/primaryDarkColor"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:fontFamily="@font/titillium_web"
                        android:text="Qty"
                        android:textSize="14dp"
                        android:textColor="@color/primaryDarkColor"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:fontFamily="@font/titillium_web"
                        android:text="Req Qty"
                        android:textSize="14dp"
                        android:textColor="@color/primaryDarkColor"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="Avail Qty"
                        android:textSize="14dp"
                        android:fontFamily="@font/titillium_web"
                        android:textColor="@color/primaryDarkColor"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="N/A Qty"
                        android:textColor="@color/primaryDarkColor"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:orientation="vertical" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleItems"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:padding="10dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProceedSave"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/primaryColor"
            android:gravity="center"
            android:fontFamily="@font/titillium_web"
            android:text="Proceed to save"
            android:textColor="@color/primaryTextColor"
            android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout>